{
    "name": "littlify",
    "version": 2,
    "builds": [
        { "src": "packages/server/src/index.ts", "use": "@now/node-server" }
    ],
    "routes": [{ "src": "/(.*)", "dest": "packages/server/src/index.ts" }],
    "env": {
        "SPOTIFY_CLIENT_ID": "@spotify_client_id",
        "SPOTIFY_CLIENT_SECRET": "@spotify_client_secret",
        "SPOTIFY_REDIRECT_URI": "https://littlify.now.sh/v1/callback",
        "CLIENT_URI": "https://littlify.netlify.com/"
    }
}
